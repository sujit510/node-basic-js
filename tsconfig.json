{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/src",
    "resolveJsonModule": true,
    "lib": [
      "esnext", "dom"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json"
  ]
}